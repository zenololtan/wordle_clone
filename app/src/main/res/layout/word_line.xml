<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/cell_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/white"
        android:layout_toStartOf="@id/cell_1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/cell_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/white"
        android:layout_toStartOf="@id/cell_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/cell_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/cell_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/white"
        android:layout_toEndOf="@id/cell_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/cell_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/white"
        android:layout_toEndOf="@id/cell_3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>